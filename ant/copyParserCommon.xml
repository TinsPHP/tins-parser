<project name="copyParserCommon" basedir="../">

    <import file="${basedir}/ant/build-common.xml" as="common"/>

    <property name="parser-common.jar" location="${basedir}/../tsphp-parser-common/build/lib"/>

    <target name="parser-common" depends="" description="copy parser-common library to the lib folder">
        <copyComponent dir="${parser-common.jar}" includes="TSPHP-parser-common-*.jar"/>
    </target>

</project>